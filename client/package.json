{
  "name": "superorch-client",
  "description": "An desktop client for superorch",
  "author": "Lorenzo Rivosecchi",
  "main": "public/electron.js",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-start": "nodemon --watch public/*.js --exec \"electron .\"",
    "electron-build": "electron-builder",
    "build": "yarn run react-build && yarn run electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn run react-start\" \"wait-on http://localhost:3000 && yarn run electron-start\""
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@fortawesome/fontawesome-svg-core": "^1.2.26",
    "@fortawesome/free-solid-svg-icons": "^5.12.0",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "apollo-boost": "^0.4.7",
    "apollo-link-context": "^1.0.19",
    "apollo-link-ws": "^1.0.19",
    "cross-env": "^6.0.3",
    "draft-js": "^0.11.3",
    "draft-js-plugins-editor": "^3.0.0",
    "electron-is-dev": "^1.1.0",
    "graphql": "^14.5.8",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-draggable": "^4.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0",
    "styled-components": "^4.4.1",
    "styled-normalize": "^8.0.6",
    "styled-reset": "^4.0.8",
    "subscriptions-transport-ws": "^0.9.16",
    "supercolliderjs": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "electron": "^7.1.7",
    "electron-builder": "^21.2.0",
    "electron-devtools-installer": "^2.2.4",
    "husky": "^3.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "wait-on": "^3.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "lorenzorivosecchi.superorch-app",
    "mac": {
      "icon": "assets/favicon.icns"
    },
    "win": {
      "icon": "assets/favicon.ico"
    },
    "linux": {
      "icon": "assets/favicon.png"
    }
  }
}
